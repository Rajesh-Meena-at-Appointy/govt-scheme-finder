# Firebase Admin (Server-side)
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Firebase Client (already in .env.local for the frontend)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# App Config
NEXT_PUBLIC_SITE_URL=https://govtschemefinder.com
NEXT_PUBLIC_ADMIN_PASSWORD=admin123

# Authorized Admin Emails (comma-separated)
NEXT_PUBLIC_AUTHORIZED_EMAILS=admin@example.com,youremail@gmail.com
